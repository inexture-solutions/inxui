{
  "name": "@inexture/tiptap",
  "version": "23.0.2",
  "license": "MIT",
  "description": "A rich text editor library built on top of Mantine's Tiptap integration, providing seamless integration and additional toolsify-specific features for React applications.",
  "sideEffects": [
    "./dist/styles.layer.css",
    "./dist/styles.css"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "export": "./src/index.js",
      "require": "./dist/index.js"
    },
    "./extensions": {
      "types": "./dist/extensions/index.d.ts",
      "import": "./dist/extensions/index.mjs",
      "export": "./src/extensions/index.ts",
      "require": "./dist/extensions/index.js"
    },
    "./styles.layer.css": "./dist/styles.layer.css",
    "./styles.css": "./dist/styles.css"
  },
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "prebuild": "pnpm test",
    "build": "tsup && shx cp node_modules/@mantine/tiptap/styles.layer.css dist/styles.layer.css && shx cp node_modules/@mantine/tiptap/styles.css dist/styles.css",
    "dev": "tsup --watch",
    "lint": "eslint . --ext .tsx,.jsx,.ts --max-warnings 0",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist",
    "test": "vitest run --coverage"
  },
  "devDependencies": {
    "@inexture/core": "workspace:*",
    "@types/node": "latest",
    "@types/react": "^19.1.16",
    "@types/react-dom": "^19.1.9",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3",
    "@vitest/coverage-v8": "^3.2.4",
    "jsdom": "^27.0.1",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@mantine/tiptap": "^8.3.5",
    "@tiptap/extension-underline": "^3.7.2",
    "@tiptap/extension-link": "^3.7.2",
    "@tiptap/extension-text": "^3.7.2",
    "@tiptap/extension-paragraph": "^3.7.2",
    "@tiptap/extension-document": "^3.7.2",
    "@tiptap/extension-bold": "^3.7.2",
    "@tiptap/extension-italic": "^3.7.2",
    "@tiptap/extension-history": "^3.7.2",
    "@tiptap/extension-heading": "^3.7.2",
    "@tiptap/extension-blockquote": "^3.7.2",
    "@tiptap/extension-dropcursor": "^3.7.2",
    "@tiptap/extension-gapcursor": "^3.7.2",
    "@tiptap/extension-strike": "^3.7.2",
    "@tiptap/extension-code": "^3.7.2",
    "@tiptap/extension-bullet-list": "^3.7.2",
    "@tiptap/extension-list-item": "^3.7.2",
    "@tiptap/extension-ordered-list": "^3.7.2",
    "@tiptap/extension-hard-break": "^3.7.2",
    "@tiptap/extension-code-block": "^3.7.2",
    "@tiptap/extension-horizontal-rule": "^3.7.2",
    "@tiptap/extension-bubble-menu": "^3.7.2",
    "@tiptap/extension-floating-menu": "^3.7.2",
    "@tiptap/extension-image": "^3.7.2",
    "@tiptap/extension-placeholder": "^3.7.2",
    "@tiptap/extension-table": "^3.7.2",
    "@tiptap/extension-table-row": "^3.7.2",
    "@tiptap/extension-table-cell": "^3.7.2",
    "@tiptap/extension-table-header": "^3.7.2",
    "@tiptap/extension-text-style": "^3.7.2",
    "@tiptap/extension-text-align": "^3.7.2",
    "@tiptap/extension-task-item": "^3.7.2",
    "@tiptap/extension-task-list": "^3.7.2",
    "@tiptap/extension-highlight": "^3.7.2",
    "@tiptap/extension-typography": "^3.7.2",
    "@tiptap/extension-color": "^3.7.2",
    "@tiptap/extension-character-count": "^3.7.2",
    "@tiptap/extension-code-block-lowlight": "^3.7.2",
    "@tiptap/react": "^3.7.2",
    "@tiptap/starter-kit": "^3.7.2",
    "shx": "^0.4.0"
  },
  "peerDependencies": {
    "@inexture/core": "^21.0.2",
    "react": ">=18",
    "react-dom": ">=18"
  }
}
