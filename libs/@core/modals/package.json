{
  "name": "@inexture/modals",
  "version": "23.0.0",
  "description": "A lightweight and customizable modals library built on top of Mantine's modals component. It provides pre-configured modal components and utilities for seamless integration into React applications.",
  "license": "MIT",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "export": "./src/index.js",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "prebuild": "pnpm test",
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint . --ext .tsx,.jsx,.ts --max-warnings 0",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist",
    "test": "vitest run --coverage"
  },
  "devDependencies": {
    "@inexture/core": "workspace:*",
    "@types/node": "^24.9.1",
    "@types/react": "latest",
    "@types/react-dom": "latest",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3",
    "@vitest/coverage-v8": "^3.2.4",
    "jsdom": "^27.0.1",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@mantine/modals": "^8.3.5",
    "shx": "^0.4.0"
  },
  "peerDependencies": {
    "@inexture/core": "*",
    "react": "*",
    "react-dom": "*"
  }
}
